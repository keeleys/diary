<div id="articleList">
	<ul>
		<% page.posts.each(function(post){ %>
		<li class="article-li">
			<span class="article-date"><%- date(post.date, "YYYY / MM / DD") %></span>
			<a class="article-title" href="<%- config.root %><%- post.path %>"><%- post.title %></a>
		</li>
		<% }); %>
		<% if(page.prev || page.next) {%>
		<nav>
			<%- paginator({
				prev_text: '上一页',
				next_text: '下一页',
				mid_size : 1,
				escape   : false
            }) %>
		</nav>
		<% } %>
	</ul>
</div>